package controlstatments;
import java.util.Scanner;
public class SwithCase {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input=new Scanner(System.in);
		System.out.println("enter the choice");
		System.out.println("A:enter the character");
		System.out.println("B:print the vowels");
		System.out.println("C:print the consonants");
		System.out.println("D:print the symbol");
		char choice=input.next().trim().charAt(0);
		char[]array=new char[10];
		do{
			switch(choice) {
			case 'A':
				System.out.println("enter the character");
				array=input.next().charAt(0);
				for(int i=0;i<array.length;i++) {
					System.out.println("the character is:"+array[i]);	
					break;
				}
			}
		}while(choice!=0);
	}

}
